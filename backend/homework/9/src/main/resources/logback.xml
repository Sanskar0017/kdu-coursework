<!-- src/main/resources/logback.xml -->
<configuration>
    <springProfile name="dev">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <!-- Configuration for dev profile -->
            <encoder>
                <pattern>%d{ISO_OFFSET_DATE_TIME} %highlight(%-5level) [%thread] %logger{36} - %msg success%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <springProfile name="prod">
        <appender name="file" class="ch.qos.logback.core.FileAppender">
            <!-- Configuration for prod profile -->
            <file>application.log</file>
            <encoder>
                <pattern>%d{ISO_OFFSET_DATE_TIME} %highlight(%-5level) [%thread] %logger{36} - %msg failed%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
